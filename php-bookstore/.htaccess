RewriteEngine On

# Handle image uploads
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^uploads/(.*)$ uploads/$1 [L]

# Basic security
<Files "config/database.php">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to sensitive files
<FilesMatch "\.(sql|log)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
